<table>
  <thead>
    <tr>
      <th><%= t('.potencia') %> (W)</th>
      <th><%= t('.quantitat') %></th>
      <th><%= t('.hores_mensuals') %></th>
      <th></th>
    </tr>
  <tbody>
    <% @leds.each do |lampada| %>
      <tr>
        <td><%= lampada.potencia %></td>
        <td><%= lampada.numero %></td>
        <td><%= lampada.hores_mensuals %></td>
        <td class="columna-eliminar">
          <%= link_to lampada_path(lampada), remote: true, method: :delete, data: { confirm: t('.eliminar') } do %>
            <i class="fa fa-trash" aria-hidden="true"></i>                 
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 
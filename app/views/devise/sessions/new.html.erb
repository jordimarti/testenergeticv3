<div class="dark-background-container">
  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      <div class="medium-5 cell">
        <div class="heavy-container">
          <div class="heavy-title-container">
            <h2 class="heavy-title"><%= t('.login_title') %></h2>
          </div>
          <div class="heavy-container-form">    
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
              <% end %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions clearfix">
                <%= f.button :submit, t('.login_button'), :class => 'button float-right' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="medium-5 medium-offset-2 cell">
        <p><%= t('.login_needed') %></p>
        <p><%= render "devise/shared/links" %></p>
      </div>
    </div>
  </div>
</div>
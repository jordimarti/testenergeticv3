<div class="reveal" id="modal-clima" data-reveal>
  <h3 id="modalTitle"><%= t('.editar_sistema') %></h3>
  <div id="formulari-calefaccio-1" class="formulari-clima">
  </div>
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>


<div class="light-background-container">
  
  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      <div class="medium-12 cell">
        <div class="boto-retorn">
          <%= link_to entitat_aixecament_path(@entitat) do %>
            <i class="fa fa-arrow-left" aria-hidden="true"></i> <%= t('.aixecament_dades') %>
          <% end %>
        </div>
        <div class="titol-seccio">
          <%= t('.titol') %>
        </div>
      </div>
    </div>

    <% if @entitat.tipologia == 'Plurifamiliar' %>
      <div class="grid-x grid-margin-x">
        <div class="medium-12 cell">
          <div class="light-container">
            <p><%= t('.text_clima_1') %></p>
            <p><%= t('.text_clima_2') %></p>
            <p><%= link_to t('.seleccio_ambit'), entitat_ambits_path(@entitat.id), class:'button' %></p>
          </div>
        </div>
      </div>

      <br/>

      <div class="grid-x grid-margin-x">
        <div class="medium-12 cell">
          <div class="titol-seccio">
            <%= t('.clima_zones_comunes') %>
          </div>
        </div>
      </div>
    <% end %>
        
    <div class="grid-x grid-margin-x">
      <div class="medium-6 cell">
        <div class="light-container container-separator" id="calefaccio-1">
          <%= render partial: '/climatitzacions/calefaccio_1' %>
        </div>
      </div>
      <div class="medium-6 cell">
        <div class="light-container container-separator" id="calefaccio-2">
          <%= render partial: '/climatitzacions/calefaccio_2' %>
        </div>
      </div>
    </div>

    <div class="grid-x grid-margin-x">
      <div class="medium-6 cell">
        <div class="light-container container-separator" id="refrigeracio">
          <%= render partial: '/climatitzacions/refrigeracio' %>
        </div>
      </div>
      <div class="medium-6 cell">
        <div class="light-container container-separator" id="acs">
          <%= render partial: '/climatitzacions/acs' %>
        </div>
      </div>
    </div>

    <div class="grid-x grid-margin-x">
      <div class="medium-6 cell">
        <div class="light-container container-separator" id="generacio">
          <%= render partial: '/climatitzacions/generacio' %>
        </div>
      </div>
    </div>


  </div>
</div>
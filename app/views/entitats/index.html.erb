<div class="dark-background-container">
  
  <% flash.each do |key, value| %>
    <div class="grid-container">
      <div class="grid-x grid-margin-x">
        <div class="medium-6 cell">
          <div class="success callout" data-closable>
            <%= value %>
            <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      <div class="medium-12 cell">
        <div class="heavy-container">
          <div class="heavy-title-container">
            <h2 class="heavy-title"><%= t('.titol') %></h2>
          </div>
          <div class="heavy-container-form">
            <div class="button-right-container">
              <%= link_to new_entitat_path, :class => "button button-right" do %>
                <%= t('.nou_edifici') %>
              <% end %>
            </div>
            
            <div class="grid-x grid-margin-x">
              <div class="medium-9 cell">
            
                <div class="projectes-existents-container">
                  <% if @entitats.count == 0 %>
                    <p><%= t('.no_projectes') %></p>
                  <% else %>
                    <div class="llistat-edificis">
                      <% @entitats.each do |entitat| %>
                        <div class="item-llistat-edificis">
                          <div class="imatge-item-llistat-edificis">
                            <% if entitat.imatge_entitat.attached? %>
                              <%= image_tag entitat.imatge_entitat.variant(auto_orient: true) %>
                            <% end %> 
                          </div>
                          <div class="text-item-llistat-edificis">
                            <%= link_to(entitat.nom, entitat_ambits_path(entitat.id), :class => 'link-item-edifici') %>
                            <br>
                            <span class="data-llistat-edificis">(<%= entitat.created_at.day.to_s %>-<%= entitat.created_at.month.to_s %>-<%= entitat.created_at.year.to_s %>)</span>
                            <div class="boto-item-llistat-edificis button-right">
                              <%= link_to entitat, method: :delete, data: { confirm: t('.eliminar') } do %>
                                <i class="fa fa-trash" aria-hidden="true"></i>                 
                              <% end %>
                            </div>

                            <div class="boto-item-llistat-edificis button-right">
                              <%= link_to edit_entitat_path(entitat) do %>
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                              <% end %>
                            </div>
                          </div>
                          
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>    

      </div>
    </div>
  </div>

</div>

<%= simple_form_for(@consum_global) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :entitat_id %>
    <%= f.input :ambit %>
    <%= f.input :consum_anual_electricitat %>
    <%= f.input :consum_anual_gas %>
    <%= f.input :consum_anual_gasoil %>
    <%= f.input :despesa_anual_electricitat %>
    <%= f.input :despesa_anual_gas %>
    <%= f.input :despesa_anual_gasoil %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.guardar'), :class => 'button' %>
  </div>
<% end %>

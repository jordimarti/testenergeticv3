
<%= simple_form_for(@proposta, remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :entitat_id, as: :hidden %>
    <%= f.input :ambit %>
    <%= f.input :cost_optimista %>
    <%= f.input :cost_pessimista %>
    <%= f.input :estalvi_optimista %>
    <%= f.input :estalvi_pessimista %>
    <%= f.input :roi_optimista %>
    <%= f.input :roi_pessimista %>
    <%= f.input :emissions_optimista %>
    <%= f.input :emissions_pessimista %>
    
    <%= f.input :mesura %>
    <%= f.input :descripcio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

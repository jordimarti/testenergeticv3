
<%= simple_form_for(@coberta) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :entitat_id %>
    <%= f.input :ambit %>
    <%= f.input :nom %>
    <%= f.input :descripcio %>
    <%= f.input :superficie %>
    <%= f.input :percentatge %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
